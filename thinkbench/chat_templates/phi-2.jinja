{% set bos_token = '<|endoftext|>' %}
{% set eos_token = '<|endoftext|>' %}
{% if messages[0]['role'] == 'system' %}
    {% set loop_messages = messages[1:] %}
    {% set system_message = 'System: ' + messages[0]['content'].strip() + '\n' %}
{% else %}
    {% set loop_messages = messages %}
    {% set system_message = '' %}
{% endif %}

{%- for message in loop_messages -%}
    {%- if (message['role'] == 'user') != (loop.index0 % 2 == 0) -%}
        {{ raise_exception('Conversation roles must alternate user/assistant/user/assistant/...') }}
    {%- endif -%}

    {%- if (message['role'] == 'system') -%}
        {{ raise_exception('The system prompt needs to be at the beginning of the conversation.') }}
    {%- endif -%}

    {%- if loop.index0 == 0 -%} {# Comment #}
        {{- bos_token + system_message -}}
    {%- endif -%}

    {%- if message['role'] == 'user' -%}
        {{- 'Instruct: ' + message['content'].strip() + '\n' -}}
    {%- elif message['role'] == 'assistant' -%}
        {{- 'Output: ' + message['content'].strip() + '\n' -}}
    {%- endif -%}

    {%- if loop.index0 == (loop.length - 1) and add_generation_prompt -%}
        {{- 'Output: \n' -}}
    {%- endif %}
{%- endfor -%}